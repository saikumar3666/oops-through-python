from tkinter import *
from tkinter.ttk import *

from time import strftime

root = Tk()
root.title('CSE 36CLOCK')

def time():
    string = strftime('%d:%M:%Y , %H:%M:%S: %p')
    lbl.config(text=string)
    lbl.after(900,time)
    
lbl = Label(root, font=('ARIAL', 50, 'bold'),
            background='red',
            foreground='black')

lbl.pack(anchor='center')
time()
mainloop()
